<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hu.barbar.logcollector.MainActivity"
    android:orientation="vertical" 
    >

    <!-- 
    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "  
    />
     -->
    
    <!--
    <TextView
        android:id="@+id/msg_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""  
    />
    -->
    
    <LinearLayout 
        android:id="@+id/button_line"
    	style="@style/ButtonLine"
    >
        
         <ImageButton 
			android:id="@+id/btn_drive"
			android:layout_width="70dip"
        	android:layout_height="70dip"  
        	android:src="@drawable/drive2" 
         />
         <ImageButton 
			android:id="@+id/btn_parking"
			android:layout_width="70dip"
        	android:layout_height="70dip"  
        	android:src="@drawable/parking2"       
         />
         
         <ImageButton 
			android:id="@+id/btn_info"
			android:layout_width="70dip"
        	android:layout_height="70dip"  
        	android:src="@drawable/info2"       
         />
         
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/button_line2"
    	style="@style/ButtonLine"
    > 
     	<ImageButton 
			android:id="@+id/btn_checkin"
			android:layout_width="70dip"
        	android:layout_height="70dip"  
        	android:src="@drawable/checkin2"       
         />
         <ImageButton 
			android:id="@+id/btn_work"
			android:layout_width="70dip"
        	android:layout_height="70dip"  
        	android:src="@drawable/work2"       
         />
         <ImageButton 
			android:id="@+id/btn_go_home"
			android:layout_width="70dip"
        	android:layout_height="70dip"  
        	android:src="@drawable/gohome2"       
         />
         <ImageButton 
			android:id="@+id/btn_checkout"
			android:layout_width="70dip"
        	android:layout_height="70dip"  
        	android:src="@drawable/checkout2"       
         />
    </LinearLayout>
    
    <ScrollView
    	android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
    >
	    <EditText
	        android:id="@+id/log_area"
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			android:singleLine="false"     
			android:gravity="top"         
			android:text="@string/blank"
			android:scrollbars="vertical"
		/>
    </ScrollView>


</LinearLayout>
